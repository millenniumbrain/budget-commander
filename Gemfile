source 'https://rubygems.org'

# => server
gem 'puma'

# => core
gem 'roda'
gem 'concurrent-ruby'
# => database
gem 'sequel'
gem 'pg'

# => security
gem 'bcrypt'

# => templates
gem 'tilt'
gem 'erubis'

# => other
gem 'rake'
gem "rack_csrf"
gem 'mail'
gem 'json'

group :development do
  gem 'sqlite3'
  gem 'sass'
  gem 'yard'
  gem 'shotgun'
end

group :testing do
  gem 'rack-test', require: 'rack/test'
  gem 'better_errors'
  gem 'minitest'
  gem 'capybara'
  gem "minitest-hooks"
end
